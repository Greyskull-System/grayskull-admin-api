# Admin Database
ADMIN_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/modulys_pax_admin?schema=public"

# JWT
JWT_SECRET="admin-super-secret-jwt-key-change-in-production"
JWT_EXPIRATION="8h"

# Server
PORT=3000
NODE_ENV=development

# Database provisioning (para criar bancos dos clientes)
DB_ADMIN_HOST="localhost"
DB_ADMIN_PORT="5432"
DB_ADMIN_USER="postgres"
DB_ADMIN_PASS="postgres"

# Modulys Pax Baileys Service (WhatsApp)
BAILEYS_SERVICE_URL="http://localhost:9000"

# Migrations - Caminhos dos projetos
# WORKSPACE_ROOT: Raiz onde ficam todos os projetos (modulys-pax-*, etc.)
# DATABASE_PROJECT_PATH: Caminho do modulys-pax-database (schema padrão)
# Se não configurados, usa caminhos relativos ao modulys-pax-admin-api
WORKSPACE_ROOT="../"
DATABASE_PROJECT_PATH="../modulys-pax-database"

# Service Key (para comunicação entre serviços internos)
# IMPORTANTE: Use uma chave segura e diferente em produção
SERVICE_KEY="modulys-pax-internal-service-key-change-in-production"
